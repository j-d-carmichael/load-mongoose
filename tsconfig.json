{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
